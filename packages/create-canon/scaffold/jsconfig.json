{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "checkJs": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "paths": {
      "$root/*": ["./*"],
      "$app/*": ["./app/*"]
    },
    "strictNullChecks": true,
    "target": "es2016"
  },
  "exclude": [
    "./node_modules/",
    "./static/"
  ]
}
